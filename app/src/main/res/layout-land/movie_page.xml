<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple"
    tools:context=".MoviePage">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tvLogo"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="?attr/homeAsUpIndicator"
        />

    <TextView
        android:id="@+id/tvMovieTitle"
        android:layout_width="239dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="132dp"
        android:layout_marginBottom="8dp"
        android:text="@string/movie_title"
        android:textAlignment="center"
        android:textColor="@color/light"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/tvSynopsis"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvLogo"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/btnAddMovie"
        style="@android:style/Widget.DeviceDefault.Light.ImageButton"
        android:layout_width="46dp"
        android:layout_height="45dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="8dp"
        android:background="@color/purple"
        android:scaleType="fitXY"
        android:src="@android:drawable/ic_input_add"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/movieRatingBar" />

    <ImageView
        android:id="@+id/ivMovePoster"
        android:layout_width="172dp"
        android:layout_height="158dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvLogo"
        tools:src="@drawable/ic_launcher_background" />

    <ImageButton
        android:id="@+id/btnDeleteMovie"
        android:layout_width="46dp"
        android:layout_height="45dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="8dp"
        android:background="@color/purple"
        android:scaleType="fitXY"
        android:src="@android:drawable/ic_input_delete"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/movieRatingBar" />

    <TextView
        android:id="@+id/tvSynopsis"
        android:layout_width="84dp"
        android:layout_height="25dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="216dp"
        android:text="@string/synopsis_title"
        android:textAlignment="center"
        android:textColor="@color/light"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvLogo" />

    <TextView
        android:id="@+id/tvMovieDesc"
        android:layout_width="359dp"
        android:layout_height="114dp"
        android:layout_marginEnd="76dp"
        android:text="@string/movie_synopsis"
        android:textAlignment="center"
        android:textColor="@color/light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSynopsis" />

    <TextView
        android:id="@+id/tvStarring"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="216dp"
        android:text="@string/starring"
        android:textAlignment="center"
        android:textColor="@color/light"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMovieDesc" />

    <com.iarcuschin.simpleratingbar.SimpleRatingBar
        android:id="@+id/movieRatingBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivMovePoster"
        app:srb_borderColor="@color/grey"
        app:srb_fillColor="@color/golden"
        app:srb_isIndicator="true"
        app:srb_numberOfStars="5"
        app:srb_starSize="40dp"
        app:srb_stepSize="0.5" />

    <TextView
        android:id="@+id/tvCast"
        android:layout_width="359dp"
        android:layout_height="114dp"
        android:layout_marginEnd="76dp"
        android:text="@string/cast_members"
        android:textAlignment="center"
        android:textColor="@color/light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvStarring" />


</androidx.constraintlayout.widget.ConstraintLayout>