<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light"
    tools:context=".LoginScreen">


    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/LoginScreen_username"
        android:layout_width="366dp"
        android:layout_height="41dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="76dp"
        app:layout_constraintHorizontal_bias="0.789"
        android:hint="@string/prompt_username"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/LoginScreen_rememberSwitch"
        android:layout_width="142dp"
        android:layout_height="45dp"
        android:layout_marginEnd="16dp"
        android:text="@string/login_remember"
        app:layout_constraintBottom_toTopOf="@+id/LoginScreen_loginButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.893"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LoginScreen_username"
        app:layout_constraintVertical_bias="0.773" />


    <Button
        android:id="@+id/LoginScreen_loginButton"
        android:layout_width="369dp"
        android:layout_height="63dp"
        android:layout_marginTop="120dp"
        android:text="@string/login_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.756"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LoginScreen_username" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/LoginScreen_password"
        android:layout_width="366dp"
        android:layout_height="42dp"
        android:layout_marginTop="16dp"
        android:hint="@string/prompt_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.789"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LoginScreen_username" />

    <ImageView
        android:id="@+id/moodvieLogo"
        android:layout_width="376dp"
        android:layout_height="146dp"
        android:layout_marginBottom="124dp"
        android:contentDescription="@string/image_description"
        android:src="@mipmap/moodvie"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/LoginScreen_username" />

    <LinearLayout
        android:layout_width="251dp"
        android:layout_height="27dp"
        android:layout_marginStart="404dp"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/LoginScreen_noAccountString"
            android:layout_width="145dp"
            android:layout_height="20dp"
            android:layout_marginBottom="428dp"
            android:text="@string/login_no_account"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.127"

            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/LoginScreen_createAnAccount"
            android:layout_width="115dp"
            android:layout_height="17dp"
            android:layout_marginBottom="24dp"
            android:text="@string/login_create_account"
            android:textColor="@color/blue"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/LoginScreen_noAccountString" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>