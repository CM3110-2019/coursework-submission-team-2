<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/purple"
        tools:context=".HomeScreen">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/etSearchMovie"
            android:layout_width="212dp"
            android:layout_height="46dp"
            android:layout_marginLeft="52dp"
            android:background="@color/white"
            android:ems="10"
            android:hint="@string/search_for_movie"
            android:inputType="textPersonName"
            android:textAlignment="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/scanButton"
            android:layout_width="158dp"
            android:layout_height="48dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:background="@color/pinkpurple"
            android:text="@string/scan_movie"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/faceButton"
            app:layout_constraintTop_toBottomOf="@id/etSearchMovie"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="120dp" />

        <Button
            android:id="@+id/faceButton"
            android:layout_width="158dp"
            android:layout_height="48dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:background="@color/pinkpurple"
            android:text="@string/face_scan"
            app:layout_constraintLeft_toRightOf="@id/scanButton"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etSearchMovie"
            tools:layout_editor_absoluteX="224dp"
            tools:layout_editor_absoluteY="120dp" />

        <ImageButton
            android:id="@+id/HomeScreen_settingButton"
            android:layout_width="46dp"
            android:layout_height="42dp"
            android:background="@color/pinkpurple"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:drawable/ic_menu_manage" />

        <ImageButton
            android:id="@+id/searchButton"
            android:layout_width="61dp"
            android:layout_height="47dp"
            android:layout_marginLeft="4dp"
            android:background="@color/pinkpurple"
            app:layout_constraintLeft_toRightOf="@+id/etSearchMovie"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:drawable/ic_search_category_default" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:id="@+id/scrollMainPage"
        android:layout_width="match_parent"
        android:layout_height="600dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.877"
        tools:layout_editor_absoluteX="0dp">

        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="404dp"
            android:layout_height="606dp"
            android:padding="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        </androidx.gridlayout.widget.GridLayout>

    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>
